@page
@model KForceCars.Pages.Cars.AddNewCarModel

@{
    ViewData["Title"] = "Register car";
}

<h1>Add new car</h1>
<form method="post">
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label for="model">Model</label>
                <input type="text" id="model" class="form-control" placeholder="Model" asp-for="@Model.Car.Model"/>
            </div>
            <div class="form-group">
                <label for="make">Make</label>
                <input type="text" id="make" class="form-control" placeholder="Make" asp-for="@Model.Car.Make"/>
            </div>
            <div class="form-group">
                <label for="color">Color</label>
                <input type="text" id="color" class="form-control" placeholder="Color" asp-for="@Model.Car.Color"/>
            </div>
            <div class="form-group">
                <label for="doors">Doors</label>
                <input type="number" id="doors" class="form-control" placeholder="Doors" asp-for="@Model.Car.Doors"/>
            </div>
            <div class="form-group">
                <label for="year">Year</label>
                <input type="number" id="year" class="form-control" placeholder="Year" asp-for="@Model.Car.Year"/>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" id="price" class="form-control" placeholder="Price" asp-for="@Model.Car.Price"/>
            </div>
            <button type="submit" class="btn btn-lg btn-primary">Submit</button>
        </div>
    </div>
</form>